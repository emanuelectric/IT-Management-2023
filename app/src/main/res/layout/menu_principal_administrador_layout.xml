<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Imagen del Superadministrador -->
    <ImageView
        android:id="@+id/imagenSuperadmin"
        android:layout_width="195dp"
        android:layout_height="264dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="Imagen Superadmin"
        android:src="@drawable/admin" />

    <!-- Mensaje de Bienvenida -->
    <TextView
        android:id="@+id/textViewBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¡Bienvenido!"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imagenSuperadmin"
        android:layout_marginTop="10dp" />

    <!-- Botón Cerrar Sesión -->
    <Button
        android:id="@+id/boton_cerrarSesion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBienvenida"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Cerrar Sesión"
        android:textSize="16sp"
        android:background="@drawable/boton_redondeado_rojo"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:onClick="CerrarSesion" />

</RelativeLayout>
