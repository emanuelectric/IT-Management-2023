<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="43dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/arrows"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:onClick="LanzarVistaMenuPrincipal" />

    <TextView
        android:id="@+id/textView_tiposPedido"
        android:layout_width="351dp"
        android:layout_height="52dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="Tipos de pedido"
        android:textSize="25dp" />

    <ListView
        android:id="@+id/listView_ListaTiposPedido"
        android:layout_width="wrap_content"
        android:layout_height="517dp"
        android:layout_below="@+id/textView_tiposPedido"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp" />
    <ImageView
        android:id="@+id/imageView_agregarTipoPedido"
        android:layout_width="500dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="620dp"
        app:srcCompat="@drawable/ic_additem"
        android:clickable="true"
        android:onClick="irAgregarTipoPedido"/>

</RelativeLayout>
