<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/logo" />

    <!-- Bot贸n Iniciar Sesi贸n -->
    <Button
        android:id="@+id/boton_irIniciarSesion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Iniciar Sesi贸n"
        android:textSize="16sp"
        android:background="@drawable/boton_redondeado_rojo"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:onClick="LanzarVistaIniciarSesion" />

    <!-- Bot贸n Registrarse -->
    <Button
        android:id="@+id/boton_irRegistrarse"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_irIniciarSesion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Registrarse"
        android:textSize="16sp"
        android:background="@drawable/boton_redondeado_rojo"
        android:textColor="#ffffff"
        android:padding="12dp"
        android:onClick="LanzarVistaRegistrarse" />

</RelativeLayout>
