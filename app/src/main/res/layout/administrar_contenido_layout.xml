<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="43dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/arrows"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:onClick="LanzarVistaMenuPrincipal" />

    <TextView
        android:id="@+id/textView_administrarContenido"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="Administrar contenido"
        android:textSize="25dp" />

    <!-- ScrollView para la lista de botones -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_administrarContenido"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="44dp"
        android:layout_marginRight="20dp">

        <!-- LinearLayout para organizar los botones de manera vertical -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- Botones para ir a las vistas -->
            <Button
                android:id="@+id/boton_categoriasProducto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:background="@drawable/boton_redondeado_rojo"
                android:onClick="TuMetodo"
                android:padding="12dp"
                android:text="Categorías de producto"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_inventario"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_redondeado_rojo"
                android:onClick="TuMetodo"
                android:padding="12dp"
                android:text="Inventario"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_productos"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_redondeado_rojo"
                android:onClick="TuMetodo"
                android:padding="12dp"
                android:text="Productos"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_tiposPedido"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_redondeado_rojo"
                android:onClick="TuMetodo"
                android:padding="12dp"
                android:text="Tipos de pedido"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_estadosPedido"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_redondeado_rojo"
                android:onClick="TuMetodo"
                android:padding="12dp"
                android:text="Estados de pedido"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_pedidos"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_redondeado_rojo"
                android:onClick="TuMetodo"
                android:padding="12dp"
                android:text="Pedidos"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_divisas"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_redondeado_rojo"
                android:onClick="TuMetodo"
                android:padding="12dp"
                android:text="Divisas"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/boton_resenhas"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/boton_redondeado_rojo"
                android:onClick="TuMetodo"
                android:padding="12dp"
                android:text="Reseñas"
                android:textColor="#ffffff"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
