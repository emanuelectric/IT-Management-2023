<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="43dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/arrows"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:onClick="LanzarVistaMenuInicial" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="162dp"
        android:layout_height="35dp"
        android:text="Iniciar Sesión"
        android:textSize="25dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="120dp"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        app:srcCompat="@drawable/bloque_texto" />

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        app:srcCompat="@drawable/bloque_texto" />

    <EditText
        android:id="@+id/edittext_iniciarSesion_correoElectronico"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="285dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/dark_grey"
        android:hint="Correo Electrónico" />

    <EditText
        android:id="@+id/edittext_inciarSesion_contrasenha"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="365dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/dark_grey"
        android:hint="Contraseña" />

    <Button
        android:id="@+id/boton_continuar_iniciar_sesion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView17"
        android:layout_marginTop="20dp"
        android:onClick="iniciarSesion"
        android:text="Iniciar Sesión"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:background="@drawable/boton_redondeado_rojo"
        android:padding="12dp" />

    <!-- Nuevo texto para "¿Olvidaste tu contraseña?" -->
    <TextView
        android:id="@+id/txt_olvidar_contrasenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_continuar_iniciar_sesion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="¿Olvidaste tu contraseña?"
        android:textColor="#0000FF"
        android:textSize="14sp"
        android:onClick="LanzarVistaRestablecerContrasenha01"
        android:clickable="true" />

</RelativeLayout>
