<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="43dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/arrows"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:clickable="true"
        android:onClick="LanzarVistaIniciarSesion" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="30dp"
        android:text="Restablecer contraseña"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        app:srcCompat="@drawable/bloque_texto" />

    <EditText
        android:id="@+id/edittext_recuperarContrasenha_correoElectronico"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="285dp"
        android:ems="10"
        android:inputType="text"
        android:textColor="@color/dark_grey"
        android:hint="Correo Electrónico" />

    <TextView
        android:id="@+id/txt_olvidar_contrasenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boton_siguiente_restablecer_contrasenha"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-174dp"
        android:text="Ingresa tu correo electrónico"
        android:textColor="#000000"
        android:textSize="14sp" />

    <Button
        android:id="@+id/boton_siguiente_restablecer_contrasenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView16"
        android:layout_marginTop="20dp"
        android:onClick="siguienteRestablecerContrasenha"
        android:textColor="#FFFFFF"
        android:text="Siguiente"
        android:textSize="16sp"
        android:background="@drawable/boton_redondeado_rojo"
        android:padding="12dp" />
</RelativeLayout>
